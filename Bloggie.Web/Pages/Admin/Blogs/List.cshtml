@page
@model Bloggie.Web.Pages.Admin.Blogs.ListModel
@{
    ViewData["Title"] = "List of Blogs";
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1 class="display-4">Blog Posts</h1>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Heading</th>
                <th>Page Title</th>
                <th>Short Description</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model.Posts)
            {
                <tr>
                    <td>@blog.Heading</td>
                    <td>@blog.PageTitle</td>
                    <td>@blog.ShortDescription</td>
                    <td>@blog.Author</td>
                    <td>
                        <a asp-page="/Admin/Blogs/Edit" asp-route-id="@blog.Id" class="m-1"><i class="bi bi-pencil-fill"></i></a>
                        <a asp-page="/Admin/Blogs/Delete" asp-route-id="@blog.Id" class="m-1"><i class="bi bi-trash-fill text-danger"></i></a>
                    </td>
                 </tr>
            }
        </tbody>
    </table>
</div>
