@page
@model Bloggie.Web.Pages.LoginModel
@{
    ViewBag.Title = "Login";
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-g">
            <h1 class="mt-5 mb-3">Register User</h1>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginViewModel.Username">Username</label>
                    <input type="text" class="form-control" asp-for="LoginViewModel.Username" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginViewModel.Password">Password</label>
                    <input type="password" class="form-control" asp-for="LoginViewModel.Password" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
